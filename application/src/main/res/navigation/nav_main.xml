<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cya.application.ui.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.cya.application.ui.article.detail.ArticleDetailFragment"
        tools:layout="@layout/fragment_article_detail">

        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="title"
            android:defaultValue=" "
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="bgColor"
            app:argType="integer" />
        <argument
            android:name="isFirstPage"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_articleDetailFragment_self"
            app:destination="@id/articleDetailFragment"
            app:enterAnim="@anim/anim_ui_enter"
            app:exitAnim="@anim/anim_ui_bg_exit"
            app:popEnterAnim="@anim/anim_ui_bg_enter"
            app:popExitAnim="@anim/anim_ui_exit" />
    </fragment>


    <include-dynamic
        android:id="@+id/includeUser"
        app:graphPackage="com.cya.application.feature_user"
        app:graphResName="nav_user"
        app:moduleName="feature_user"
        tools:layout="@layout/fragment_login" />
    <action
        android:id="@+id/action_global_includeUser"
        app:destination="@id/includeUser"
        app:enterAnim="@anim/anim_ui_enter"
        app:exitAnim="@anim/anim_ui_bg_exit"
        app:popEnterAnim="@anim/anim_ui_bg_enter"
        app:popExitAnim="@anim/anim_ui_exit" />

    <fragment
        android:id="@+id/personalFragment"
        android:name="com.cya.application.feature_user.personal.PersonalFragment"
        app:moduleName="feature_user"
        tools:layout="@layout/fragment_personal" />
    <action
        android:id="@+id/action_global_personalFragment"
        app:destination="@id/personalFragment" />

</navigation>